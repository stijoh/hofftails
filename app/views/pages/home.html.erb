<div class="container">
  <div class="row align-items-center marg">
    <div class="col-sm-12 col-md-6 col-lg-4 d-flex justify-content-center">
      <%= image_tag "logo_big.png" %>
    </div>
    <div class="col-sm-12 col-md-6 col-lg-4 d-flex justify-content-center">
      <div>
        <%= simple_form_for(SearchForm.new, url: cocktails_path, method: :get) do |f| %>
        <%= f.input :search_term, label: false, :input_html => { :class => 'search_field' }, placeholder: 'Search', hint: 'Search cocktails or ingredients' %>
        <%= f.submit :style => "display: none;" %>
        <% end %>
        <%= link_to image_tag("create.png"), new_cocktail_path  %>
      </div>
    </div>
    <div class="col-sm-12 col-md-6 col-lg-4"></div>
  </div>
</div>
