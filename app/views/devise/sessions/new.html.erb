<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <p>Email:</p>
    <%= f.input :email,
                label: false,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", :class => 'form_field_login' } %>
    <p>Password:</p>
    <%= f.input :password,
                label: false,
                required: false,
                input_html: { autocomplete: "current-password", :class => 'form_field_login' } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions text-align-left">
    <%= f.button :submit, "Log in", class: 'btn-outline-primary' %>
  </div>
<% end %>

